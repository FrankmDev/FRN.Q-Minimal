---
const services = [
  {
    num: "01",
    title: "Velocidad que Convierte",
    desc: "Cada milisegundo cuenta. Construimos experiencias de carga instantánea.",
  },
  {
    num: "02",
    title: "Diseño que Otorga Estatus",
    desc: "Sistemas visuales únicos que comunican autoridad y diferencian tu marca.",
  },
  {
    num: "03",
    title: "Tecnología que No Caduca",
    desc: "Arquitecturas limpias que escalan sin deuda técnica ni costes ocultos.",
  },
];
---

<section class="services" id="servicios" aria-labelledby="services-title">
  <div class="container">
    <div class="section-header">
      <div class="header-label">
        <span class="label-line" aria-hidden="true"></span>
        <span class="label-text">Propuesta de Valor</span>
      </div>
      <h2 class="section-title" id="services-title">
        Infraestructura<br />
        <span class="title-highlight">Digital Premium</span>
      </h2>
    </div>

    <div class="services-grid" role="list" id="services-grid">
      {services.map((service, i) => (
        <article class="service-card" data-index={i} role="listitem">
          <!-- Background number -->
          <span class="card-bg-num" aria-hidden="true">{service.num}</span>
          
          <!-- Content -->
          <div class="card-content">
            <span class="card-index">{service.num}</span>
            <h3 class="card-title">{service.title}</h3>
            <p class="card-desc">{service.desc}</p>
          </div>

          <!-- Arrow -->
          <div class="card-arrow" aria-hidden="true">
            <span>→</span>
          </div>

          <!-- Hover frame -->
          <div class="hover-frame" aria-hidden="true">
            <div class="frame-line frame-top"></div>
            <div class="frame-line frame-right"></div>
            <div class="frame-line frame-bottom"></div>
            <div class="frame-line frame-left"></div>
          </div>
        </article>
      ))}
    </div>
  </div>

  <!-- Custom cursor for services -->
  <div class="service-cursor" id="service-cursor" aria-hidden="true"></div>
</section>

<script>
  // Custom cursor for service cards
  const servicesGrid = document.getElementById('services-grid');
  const cursor = document.getElementById('service-cursor');
  
  if (servicesGrid && cursor && window.matchMedia('(pointer: fine)').matches) {
    let mouseX = 0, mouseY = 0;
    let cursorX = 0, cursorY = 0;
    let isHovering = false;
    let rafId = null;

    function lerp(start, end, factor) {
      return start + (end - start) * factor;
    }

    function updateCursor() {
      if (!isHovering) {
        cancelAnimationFrame(rafId);
        rafId = null;
        return;
      }

      cursorX = lerp(cursorX, mouseX, 0.15);
      cursorY = lerp(cursorY, mouseY, 0.15);

      cursor.style.transform = `translate3d(${cursorX}px, ${cursorY}px, 0)`;

      rafId = requestAnimationFrame(updateCursor);
    }

    servicesGrid.addEventListener('mouseenter', () => {
      isHovering = true;
      cursor.classList.add('active');
      document.body.style.cursor = 'none';
      if (!rafId) rafId = requestAnimationFrame(updateCursor);
    }, { passive: true });

    servicesGrid.addEventListener('mouseleave', () => {
      isHovering = false;
      cursor.classList.remove('active');
      document.body.style.cursor = '';
    }, { passive: true });

    servicesGrid.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
    }, { passive: true });
  }
</script>

<style>
  .services {
    padding: var(--space-4xl) 0;
    position: relative;
  }

  .services::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: repeating-linear-gradient(
      90deg,
      var(--border) 0,
      var(--border) 20px,
      transparent 20px,
      transparent 40px
    );
  }

  .section-header {
    margin-bottom: var(--space-3xl);
  }

  .header-label {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .label-line {
    width: 60px;
    height: 2px;
    background: var(--border);
  }

  .label-text {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .section-title {
    font-size: clamp(2rem, 6vw, 4.5rem);
    font-weight: 300;
    line-height: 1;
    letter-spacing: -0.03em;
  }

  .title-highlight {
    font-weight: 800;
    position: relative;
    display: inline-block;
  }

  .title-highlight::after {
    content: "";
    position: absolute;
    bottom: 0.1em;
    left: 0;
    right: 0;
    height: 0.15em;
    background: var(--text);
    opacity: 0.15;
  }

  .services-grid {
    display: grid;
    gap: var(--space-xl);
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* ============================================
     CUSTOM CURSOR
     ============================================ */
  .service-cursor {
    position: fixed;
    top: 0;
    left: 0;
    width: 12px;
    height: 12px;
    background: var(--text);
    pointer-events: none;
    z-index: 9999;
    opacity: 0;
    transform: translate3d(-100%, -100%, 0);
    transition: opacity 0.2s ease;
    will-change: transform;
    margin-left: -6px;
    margin-top: -6px;
  }

  .service-cursor.active {
    opacity: 1;
    transform: translate3d(var(--x, 0), var(--y, 0), 0) scale(1);
  }



  /* Hide default cursor on grid */
  .services-grid {
    cursor: none;
  }

  @media (pointer: coarse) {
    .service-cursor {
      display: none;
    }
    .services-grid {
      cursor: pointer;
    }
  }

  /* ============================================
     SERVICE CARD
     ============================================ */
  .service-card {
    position: relative;
    background: var(--bg);
    border: 2px solid var(--border);
    padding: var(--space-xl);
    min-height: 260px;
    display: flex;
    flex-direction: column;
    isolation: isolate;
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* Background number */
  .card-bg-num {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: var(--font-mono);
    font-size: 10rem;
    font-weight: 800;
    opacity: 0.03;
    pointer-events: none;
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .service-card:hover .card-bg-num {
    opacity: 0.06;
    transform: translate(-50%, -50%) scale(1.1);
  }

  /* Content */
  .card-content {
    position: relative;
    z-index: 2;
    margin-top: auto;
  }

  .card-index {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 700;
    opacity: 0.3;
    margin-bottom: var(--space-md);
    transition: all 0.4s ease;
  }

  .card-title {
    font-size: clamp(1.5rem, 3vw, 1.75rem);
    font-weight: 800;
    letter-spacing: -0.03em;
    line-height: 1.1;
    margin-bottom: var(--space-md);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .card-desc {
    font-size: 0.9375rem;
    line-height: 1.6;
    opacity: 0.65;
    max-width: 90%;
    transition: all 0.4s ease;
  }

  /* Arrow */
  .card-arrow {
    position: absolute;
    top: var(--space-lg);
    right: var(--space-lg);
    width: 44px;
    height: 44px;
    border: 2px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    background: var(--bg);
    z-index: 2;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* Hover Frame */
  .hover-frame {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 3;
  }

  .frame-line {
    position: absolute;
    background: var(--text);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .frame-top {
    top: 0;
    left: 0;
    width: 0;
    height: 2px;
  }

  .frame-right {
    top: 0;
    right: 0;
    width: 2px;
    height: 0;
  }

  .frame-bottom {
    bottom: 0;
    right: 0;
    width: 0;
    height: 2px;
  }

  .frame-left {
    bottom: 0;
    left: 0;
    width: 2px;
    height: 0;
  }

  /* ============================================
     HOVER EFFECTS
     ============================================ */
  .service-card:hover {
    transform: translate(-6px, -6px);
    box-shadow: 6px 6px 0 var(--border);
  }

  .service-card:hover .card-index {
    opacity: 0.8;
    transform: translateX(4px);
  }

  .service-card:hover .card-title {
    transform: translateX(8px);
  }

  .service-card:hover .card-desc {
    opacity: 0.9;
    transform: translateX(8px);
  }

  .service-card:hover .card-arrow {
    background: var(--text);
    color: var(--bg);
    transform: translate(4px, -4px);
  }

  /* Frame animation */
  .service-card:hover .frame-top { width: 100%; transition-delay: 0ms; }
  .service-card:hover .frame-right { height: 100%; transition-delay: 80ms; }
  .service-card:hover .frame-bottom { width: 100%; transition-delay: 160ms; }
  .service-card:hover .frame-left { height: 100%; transition-delay: 240ms; }

  /* ============================================
     ENTRANCE ANIMATION
     ============================================ */
  .service-card {
    opacity: 0;
    transform: translateY(30px);
    animation: card-enter 0.7s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .service-card[data-index="0"] { animation-delay: 0ms; }
  .service-card[data-index="1"] { animation-delay: 100ms; }
  .service-card[data-index="2"] { animation-delay: 200ms; }

  @keyframes card-enter {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ============================================
     RESPONSIVE
     ============================================ */
  @media (max-width: 640px) {
    .services {
      padding: var(--space-3xl) 0;
    }
    
    .service-card {
      padding: var(--space-lg);
      min-height: 220px;
    }

    .card-bg-num {
      font-size: 7rem;
    }

    .card-arrow {
      width: 36px;
      height: 36px;
      font-size: 1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .service-card {
      opacity: 1;
      transform: none;
      animation: none;
    }
    
    .service-card,
    .service-card:hover,
    .service-card * {
      transition: none !important;
    }
  }
</style>
