---
const services = [
  {
    num: "01",
    title: "Velocidad que Convierte",
    desc: "Cada milisegundo cuenta. Construimos experiencias de carga instantánea que retienen al usuario y eliminan el abandono antes de que ocurra.",
    features: [
      "Carga bajo 1 segundo",
      "Cero plantillas pesadas",
      "Optimización extrema",
      "Métricas Core Web Vitals",
    ],
    pattern: "grid",
  },
  {
    num: "02",
    title: "Diseño que Otorga Estatus",
    desc: "No seguimos tendencias. Creamos sistemas visuales únicos que comunican autoridad y diferencian tu marca de la competencia genérica.",
    features: [
      "Sistemas de diseño exclusivos",
      "Interacciones de alta fidelidad",
      "Identidad visual memorable",
      "Experiencia inmersiva",
    ],
    pattern: "diagonal",
  },
  {
    num: "03",
    title: "Tecnología que No Caduca",
    desc: "Olvídate de actualizaciones forzosas y plugins vulnerables. Arquitecturas limpias que escalan sin deuda técnica ni costes ocultos.",
    features: [
      "Código puro, sin dependencias",
      "Seguridad de grado empresarial",
      "Escalabilidad garantizada",
      "Cero mantenimiento crítico",
    ],
    pattern: "dots",
  },
];
---

<section class="services" id="servicios" aria-labelledby="services-title">
  <div class="container">
    <div class="section-header">
      <div class="header-label">
        <span class="label-line" aria-hidden="true"></span>
        <span class="label-text">Propuesta de Valor</span>
      </div>
      <h2 class="section-title" id="services-title">
        Infraestructura<br />
        <span class="title-highlight">Digital Premium</span>
      </h2>
    </div>

    <div class="services-grid" role="list">
      {services.map((service, i) => (
        <article class="service-card" data-index={i} role="listitem">
          <div
            class="card-pattern"
            data-pattern={service.pattern}
            aria-hidden="true"
          >
            {service.pattern === "grid" && (
              <div class="pattern-grid">
                {Array.from({ length: 16 }).map(() => (
                  <span />
                ))}
              </div>
            )}
            {service.pattern === "diagonal" && (
              <div class="pattern-diagonal">
                <span /><span /><span />
              </div>
            )}
            {service.pattern === "dots" && (
              <div class="pattern-dots">
                {Array.from({ length: 20 }).map(() => (
                  <span />
                ))}
              </div>
            )}
          </div>

          <div class="card-content">
            <div class="card-header">
              <span class="card-num" aria-label={`Servicio ${service.num}`}>{service.num}</span>
              <div class="card-icon" aria-hidden="true">
                <span class="icon-arrow">↗</span>
              </div>
            </div>

            <h3 class="card-title">{service.title}</h3>
            <p class="card-desc">{service.desc}</p>

            <ul class="card-features" role="list" aria-label={`Características de ${service.title}`}>
              {service.features.map((feature) => (
                <li>
                  <span class="feature-bullet" aria-hidden="true">→</span>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
          </div>

          <div class="card-border" aria-hidden="true" />
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    padding: var(--space-4xl) 0;
    position: relative;
  }

  .services::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: repeating-linear-gradient(
      90deg,
      var(--border) 0,
      var(--border) 20px,
      transparent 20px,
      transparent 40px
    );
  }

  .section-header {
    margin-bottom: var(--space-3xl);
  }

  .header-label {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }

  .label-line {
    width: 60px;
    height: 2px;
    background: var(--border);
  }

  .label-text {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .section-title {
    font-size: clamp(2rem, 6vw, 4.5rem);
    font-weight: 300;
    line-height: 1;
    letter-spacing: -0.03em;
  }

  .title-highlight {
    font-weight: 800;
    position: relative;
    display: inline-block;
  }

  .title-highlight::after {
    content: "";
    position: absolute;
    bottom: 0.1em;
    left: 0;
    right: 0;
    height: 0.15em;
    background: var(--text);
    opacity: 0.15;
  }

  .services-grid {
    display: grid;
    gap: var(--space-lg);
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .service-card {
    position: relative;
    background: var(--bg);
    border: 2px solid var(--border);
    padding: var(--space-xl);
    transition: 
      transform var(--transition-base),
      box-shadow var(--transition-base);
    overflow: hidden;
  }
  
  .service-card:focus-within {
    outline: 3px solid var(--text);
    outline-offset: 3px;
  }

  .service-card:hover {
    transform: translate(-6px, -6px);
  }

  .service-card:hover .card-border {
    transform: translate(12px, 12px);
    opacity: 1;
  }

  .service-card:hover .icon-arrow {
    transform: translate(4px, -4px);
  }

  .card-border {
    position: absolute;
    inset: 0;
    border: 2px solid var(--border);
    transform: translate(6px, 6px);
    z-index: -1;
    opacity: 0.25;
    transition: 
      transform var(--transition-base),
      opacity var(--transition-base);
    pointer-events: none;
  }

  [data-theme="dark"] .service-card {
    box-shadow: none;
  }

  [data-theme="dark"] .service-card:hover .card-border {
    opacity: 0.4;
  }

  .card-pattern {
    position: absolute;
    top: var(--space-lg);
    right: var(--space-lg);
    width: 80px;
    height: 80px;
    opacity: 0.12;
    transition: opacity var(--transition-base);
    pointer-events: none;
  }

  .service-card:hover .card-pattern {
    opacity: 0.25;
  }

  .pattern-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 4px;
  }

  .pattern-grid span {
    width: 100%;
    aspect-ratio: 1;
    background: var(--text);
  }

  .pattern-diagonal {
    position: relative;
    height: 100%;
  }

  .pattern-diagonal span {
    position: absolute;
    width: 100%;
    height: 2px;
    background: var(--text);
    transform-origin: left center;
  }

  .pattern-diagonal span:nth-child(1) { top: 20%; transform: rotate(45deg); }
  .pattern-diagonal span:nth-child(2) { top: 50%; transform: rotate(45deg); }
  .pattern-diagonal span:nth-child(3) { top: 80%; transform: rotate(45deg); }

  .pattern-dots {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 8px;
  }

  .pattern-dots span {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--text);
  }

  .card-content {
    position: relative;
    z-index: 1;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-xl);
  }

  .card-num {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    font-weight: 700;
    opacity: 0.4;
  }

  .card-icon {
    width: 40px;
    height: 40px;
    border: 2px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .icon-arrow {
    transition: transform var(--transition-base);
  }

  .card-title {
    font-size: clamp(1.375rem, 3vw, 1.75rem);
    font-weight: 700;
    margin-bottom: var(--space-md);
    letter-spacing: -0.02em;
    line-height: 1.2;
  }

  .card-desc {
    font-size: 0.9375rem;
    line-height: 1.7;
    opacity: 0.7;
    margin-bottom: var(--space-lg);
  }

  .card-features {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .card-features li {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: 0.8125rem;
    font-weight: 500;
  }

  .feature-bullet {
    font-size: 0.75rem;
    opacity: 0.4;
    flex-shrink: 0;
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .services {
      padding: var(--space-3xl) 0;
    }
    
    .service-card {
      padding: var(--space-lg);
    }
    
    .card-pattern {
      width: 60px;
      height: 60px;
      top: var(--space-md);
      right: var(--space-md);
    }
  }
</style>
