---
interface Props {
  title: string;
  type: string;
  result: string;
  tags?: string[];
  index?: number;
  image?: string;
}

const { title, type, result, tags = [], index = 0, image = "" } = Astro.props;

// Using projects folder for images (AVIF format)
const displayImage = image || "/projects/urban.avif";
---

<article class="project-card" data-image={image} style={`--delay: ${index * 0.1}s`}>
  <div class="project-visual" aria-hidden="true">
    <div class="visual-frame">
      <div class="frame-header">
        <div class="frame-dots">
          <span></span><span></span><span></span>
        </div>
        <span class="frame-url font-mono">{title.toLowerCase().replace(/\s+/g, '-')}.dev</span>
      </div>
      <div class="frame-body">
        <div class="mockup-content">
          <div class="mock-block mock-block-1"></div>
          <div class="mock-block mock-block-2"></div>
          <div class="mock-block mock-block-3"></div>
          <div class="mock-grid">
            <div class="mock-cell"></div>
            <div class="mock-cell"></div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Hover overlay -->
    <div class="visual-overlay">
      <span class="overlay-text font-mono">VIEW PROJECT →</span>
    </div>
  </div>
  
  <div class="project-info">
    <div class="project-meta">
      <span class="project-type font-mono">{type}</span>
      <span class="project-divider">/</span>
      <span class="project-index font-mono">0{index + 1}</span>
    </div>
    
    <h3 class="project-title">{title}</h3>
    
    <div class="project-result">
      <span class="result-icon" aria-hidden="true">↑</span>
      <p class="result-text">{result}</p>
    </div>
    
    {tags.length > 0 && (
      <ul class="project-tags" role="list" aria-label={`Tecnologías de ${title}`}>
        {tags.map((tag) => (
          <li class="project-tag font-mono">{tag}</li>
        ))}
      </ul>
    )}
  </div>
  
  <div class="project-border" aria-hidden="true"></div>
  
  <!-- Floating image on hover -->
  <div class="floating-mockup" data-image={displayImage} aria-hidden="true">
    <div class="mockup-frame">
      <img src={displayImage} alt={`${title} preview`} class="mockup-img" loading="lazy" decoding="async" />
    </div>
  </div>
</article>

<script>
  // Enable floating mockup on hover for each project card
  const projectCards = document.querySelectorAll('.project-card');
  
  projectCards.forEach((card) => {
    const imageUrl = card.getAttribute('data-image');
    const floatingMockup = card.querySelector('.floating-mockup') as HTMLElement | null;
    const mockupImg = card.querySelector('.mockup-img') as HTMLImageElement | null;
    
    if (!imageUrl || !floatingMockup || !mockupImg) return;
    
    // Skip on touch devices
    if (window.matchMedia('(pointer: coarse)').matches) return;
    
    let mouseX = 0, mouseY = 0;
    let mockupX = 0, mockupY = 0;
    let rafId: number | null = null;
    let isHovering = false;
    
    function lerp(start: number, end: number, factor: number) {
      return start + (end - start) * factor;
    }
    
    function updateMockupPosition() {
      if (!isHovering) {
        if (rafId) cancelAnimationFrame(rafId);
        rafId = null;
        return;
      }
      
      // Smooth follow with lerp
      mockupX = lerp(mockupX, mouseX, 0.12);
      mockupY = lerp(mockupY, mouseY, 0.12);
      
      // Apply position with offset from cursor (positioned to the right)
      floatingMockup.style.left = `${mockupX + 60}px`;
      floatingMockup.style.top = `${mockupY - 100}px`;
      
      rafId = requestAnimationFrame(updateMockupPosition);
    }
    
    card.addEventListener('mouseenter', (e) => {
      const imgUrl = floatingMockup.getAttribute('data-image');
      if (imgUrl) {
        mockupImg.src = imgUrl;
      }
      floatingMockup.classList.add('active');
      isHovering = true;
      
      const rect = card.getBoundingClientRect();
      mouseX = e.clientX;
      mouseY = e.clientY;
      mockupX = mouseX;
      mockupY = mouseY;
      
      if (!rafId) {
        rafId = requestAnimationFrame(updateMockupPosition);
      }
    }, { passive: true });
    
    card.addEventListener('mouseleave', () => {
      floatingMockup.classList.remove('active');
      isHovering = false;
    }, { passive: true });
    
    card.addEventListener('mousemove', (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
    }, { passive: true });
  });
</script>

<style>
  .project-card {
    position: relative;
    background: var(--bg);
    border: 3px solid var(--border);
    overflow: visible;
    cursor: pointer;
    transition: 
      transform var(--transition-base),
      box-shadow var(--transition-base);
    animation: card-enter 0.6s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
    transform: translateY(30px);
  }
  
  @keyframes card-enter {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .project-card:hover {
    transform: translate(-8px, -8px);
    box-shadow: var(--shadow-brutal-hover);
  }
  
  .project-card:hover .visual-overlay {
    opacity: 1;
  }
  
  .project-card:hover .mockup-content {
    transform: scale(1.05);
  }
  
  .project-card:hover .project-title {
    text-decoration: underline;
    text-decoration-thickness: 3px;
    text-underline-offset: 4px;
  }
  
  .project-card:focus-visible {
    outline: 3px solid var(--text);
    outline-offset: 3px;
  }

  /* Visual */
  .project-visual {
    position: relative;
    aspect-ratio: 16/10;
    background: var(--bg-alt);
    border-bottom: 3px solid var(--border);
    overflow: hidden;
  }
  
  .visual-frame {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: var(--space-md);
  }
  
  .frame-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding-bottom: var(--space-sm);
    margin-bottom: var(--space-sm);
    border-bottom: 2px solid var(--border);
  }
  
  .frame-dots {
    display: flex;
    gap: 4px;
  }
  
  .frame-dots span {
    width: 8px;
    height: 8px;
    border: 2px solid var(--border);
    background: var(--bg);
  }
  
  .frame-dots span:first-child { background: var(--text); }
  
  .frame-url {
    font-size: 0.625rem;
    letter-spacing: 0.05em;
    color: var(--text-muted);
  }
  
  .frame-body {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .mockup-content {
    width: 80%;
    height: 80%;
    transition: transform var(--transition-base);
  }
  
  .mock-block {
    height: 12px;
    background: var(--border);
    margin-bottom: var(--space-sm);
    opacity: 0.3;
  }
  
  .mock-block-1 { width: 100%; }
  .mock-block-2 { width: 70%; }
  .mock-block-3 { width: 50%; margin-bottom: var(--space-md); }
  
  .mock-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-sm);
  }
  
  .mock-cell {
    aspect-ratio: 1;
    background: var(--border);
    opacity: 0.2;
  }
  
  /* Overlay */
  .visual-overlay {
    position: absolute;
    inset: 0;
    background: var(--text);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-base);
  }
  
  .overlay-text {
    font-size: 0.875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--bg);
  }

  /* Info */
  .project-info {
    padding: var(--space-lg);
  }

  .project-meta {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
  }

  .project-type {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--text-muted);
  }
  
  .project-divider {
    color: var(--text-muted);
    opacity: 0.3;
  }
  
  .project-index {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    color: var(--text-muted);
  }

  .project-title {
    font-size: clamp(1.125rem, 3vw, 1.375rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    margin-bottom: var(--space-md);
    line-height: 1.2;
  }

  .project-result {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
    padding: var(--space-md);
    background: var(--bg-alt);
    border: 2px solid var(--border);
    margin-bottom: var(--space-md);
  }
  
  .result-icon {
    font-size: 1rem;
    font-weight: 700;
    color: var(--text);
    line-height: 1.4;
    flex-shrink: 0;
  }
  
  .result-text {
    font-size: 0.875rem;
    color: var(--text-muted);
    line-height: 1.5;
    margin: 0;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .project-tag {
    font-size: 0.625rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    padding: 0.25rem 0.5rem;
    border: 2px solid var(--border);
    background: var(--bg);
  }
  
  .project-border {
    position: absolute;
    inset: 0;
    border: 3px solid var(--text);
    opacity: 0;
    transition: opacity var(--transition-fast);
    pointer-events: none;
  }
  
  .project-card:hover .project-border {
    opacity: 1;
  }
  
  /* ============================================
     FLOATING MOCKUP - Image on hover
     ============================================ */
  .floating-mockup {
    position: fixed;
    width: 320px;
    height: 220px;
    z-index: 9999;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s ease;
    will-change: left, top, opacity;
    margin-left: 60px;
    margin-top: -100px;
  }
  
  .floating-mockup.active {
    opacity: 1;
  }
  
  .floating-mockup .mockup-frame {
    width: 100%;
    height: 100%;
    background: var(--bg);
    border: 3px solid var(--border);
    box-shadow: 8px 8px 0 var(--border);
    padding: 4px;
    overflow: hidden;
  }
  
  .floating-mockup .mockup-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border: 1px solid var(--border);
  }
  
  /* Responsive */
  @media (max-width: 640px) {
    .project-card:hover {
      transform: translate(-4px, -4px);
    }
    
    .floating-mockup {
      display: none;
    }
  }
</style>
