  .result-card {
    border: 2px solid var(--border);
    padding: var(--space-xl);
    background: var(--bg);
    box-shadow: var(--shadow-brutal);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
    isolation: isolate;
  }

  .result-card:hover {
    transform: translate(-6px, -6px);
    box-shadow: 6px 6px 0 var(--border);
  }

  /* Hover frame for result cards */
  .result-card::before {
    content: '';
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 3;
    border: 2px solid transparent;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .result-card:hover::before {
    border-color: var(--text);
  }

  /* Animated corner accents */
  .result-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--text);
    transition: width 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 3;
  }

  .result-card:hover::after {
    width: 100%;
  }

  [data-theme="dark"] .result-card {
    box-shadow: none;
    border-color: var(--border);
  }

  [data-theme="dark"] .result-card:hover {
    box-shadow: var(--shadow-brutal-hover);
  }

  .result-graphic {
    display: flex;
    align-items: flex-end;
    gap: 6px;
    margin-bottom: var(--space-lg);
    height: 40px;
  }

  .graphic-bar {
    width: 8px;
    height: 20px;
    background: var(--border);
    opacity: 0.3;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .graphic-bar-mid {
    height: 30px;
    opacity: 0.5;
  }
  .graphic-bar-tall {
    height: 40px;
    opacity: 1;
  }

  .result-card:hover .graphic-bar {
    background: var(--text);
    opacity: 0.4;
  }

  .result-card:hover .graphic-bar-mid {
    opacity: 0.6;
  }

  .result-card:hover .graphic-bar-tall {
    opacity: 0.8;
  }

