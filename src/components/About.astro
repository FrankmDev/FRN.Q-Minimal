    display: flex;
    flex-direction: column;
    gap: calc((100% - 40px) / 3);
    position: relative;
    height: 100%;
    padding: 20px 0;
  }

  .method-dot {
    width: 12px;
    height: 12px;
    border: 2px solid var(--border);
    border-radius: 50%;
    background: var(--bg);
    flex-shrink: 0;
  }

  .method-dot[data-active="true"] {
    background: var(--text);
  }

  .steps-list {
    display: grid;
    gap: var(--space-md);
    list-style: none;
    padding: 0;
    counter-reset: step;
  }

