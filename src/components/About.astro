    .steps-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .step-item {
    display: flex;
    gap: var(--space-md);
    padding: var(--space-lg);
    border: 2px solid var(--border);
    background: var(--bg);
    transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
    isolation: isolate;
  }

