    width: 60px;
    height: 60px;
    top: 80px;
    left: 100px;
    background: var(--bg);
    z-index: 1;
  }

  .visual-line {
    position: absolute;
    bottom: 20px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--border);
    opacity: 0.3;
  }

  .intro-title {
    font-size: clamp(1.75rem, 5vw, 3.5rem);
    font-weight: 300;
    line-height: 1.2;
    margin-bottom: var(--space-lg);
  }

