    top: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--text);
    transition: width 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 3;
  }

  .testimonial-card:hover::before {
    width: 100%;
  }

  /* Animated border overlay */
  .testimonial-card::after {
