  }

  .step-item:hover .step-num {
    opacity: 0.8;
    transform: translateX(4px);
  }

  .step-title {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: var(--space-xs);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .step-item:hover .step-title {
    transform: translateX(4px);
  }

  .step-desc {
    font-size: 0.875rem;
    line-height: 1.6;
    opacity: 0.7;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

