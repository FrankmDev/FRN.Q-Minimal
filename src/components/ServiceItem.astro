---
interface Props {
  title: string;
  description: string;
  tags?: string[];
  mockupType: 'landing' | 'dashboard' | 'redesign' | 'figma';
  index: number;
}

const { title, description, tags = [], mockupType, index } = Astro.props;
const number = String(index + 1).padStart(2, '0');
---

<div class="service-item" data-mockup={mockupType} data-index={index} tabindex="0">
  <div class="service-number font-mono">{number}</div>
  
  <div class="service-content">
    <h3 class="service-title">{title}</h3>
    <p class="service-description">{description}</p>
    
    {tags.length > 0 && (
      <ul class="service-tags" role="list" aria-label={`CaracterÃ­sticas de ${title}`}>
        {tags.map((tag) => (
          <li class="service-tag font-mono">{tag}</li>
        ))}
      </ul>
    )}
  </div>
  
  <div class="service-arrow" aria-hidden="true">
    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" aria-hidden="true">
      <path d="M7 17L17 7M17 7H7M17 7V17"/>
    </svg>
  </div>
  
  <div class="service-border" aria-hidden="true"></div>
</div>

<style>
  .service-item {
    position: relative;
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: var(--space-lg);
    padding: var(--space-xl);
    background: var(--bg);
    border: 3px solid var(--border);
    cursor: pointer;
    transition: 
      transform var(--transition-base),
      box-shadow var(--transition-base),
      background var(--transition-base);
    overflow: hidden;
  }
  
  .service-item:hover {
    transform: translate(-6px, -6px);
    box-shadow: var(--shadow-brutal-hover);
    background: var(--bg-alt);
  }
  
  .service-item:hover .service-border {
    opacity: 1;
  }
  
  .service-item:hover .service-arrow {
    transform: translate(4px, -4px);
    color: var(--text);
  }
  
  .service-item:hover .service-number {
    background: var(--text);
    color: var(--bg);
  }
  
  .service-item:focus-visible {
    outline: 3px solid var(--text);
    outline-offset: 3px;
  }

  .service-number {
    font-size: 0.875rem;
    font-weight: 600;
    padding: var(--space-xs) var(--space-md);
    border: 2px solid var(--border);
    transition: 
      background var(--transition-fast),
      color var(--transition-fast);
    align-self: start;
    font-family: var(--font-mono);
  }

  .service-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .service-title {
    font-size: clamp(1.125rem, 3vw, 1.75rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.2;
    transition: transform var(--transition-fast);
  }
  
  .service-item:hover .service-title {
    transform: translateX(8px);
  }

  .service-description {
    font-size: 0.9375rem;
    color: var(--text-muted);
    line-height: 1.6;
    max-width: 500px;
  }

  .service-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    list-style: none;
    padding: 0;
    margin: var(--space-sm) 0 0;
  }

  .service-tag {
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    padding: 0.375rem 0.75rem;
    border: 2px solid var(--border);
    background: var(--bg);
    transition: 
      background var(--transition-fast),
      box-shadow var(--transition-fast);
    font-family: var(--font-mono);
  }
  
  .service-item:hover .service-tag {
    background: var(--bg);
    box-shadow: 2px 2px 0 0 var(--border);
  }

  .service-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    color: var(--text-muted);
    border: 2px solid var(--border);
    transition: 
      transform var(--transition-fast),
      color var(--transition-fast);
    align-self: center;
    flex-shrink: 0;
  }
  
  .service-arrow svg {
    width: 24px;
    height: 24px;
  }
  
  .service-border {
    position: absolute;
    inset: 0;
    border: 3px solid var(--text);
    opacity: 0;
    transition: opacity var(--transition-fast);
    pointer-events: none;
  }

  @media (max-width: 640px) {
    .service-item {
      grid-template-columns: 1fr;
      gap: var(--space-md);
      padding: var(--space-lg);
    }
    
    .service-arrow {
      display: none;
    }
    
    .service-number {
      align-self: start;
      font-size: 0.75rem;
      padding: 0.25rem 0.625rem;
    }
    
    .service-item:hover .service-title {
      transform: translateX(4px);
    }
  }
  
  /* Tablet adjustments */
  @media (min-width: 641px) and (max-width: 767px) {
    .service-arrow {
      width: 44px;
      height: 44px;
    }
    
    .service-arrow svg {
      width: 20px;
      height: 20px;
    }
  }
</style>
